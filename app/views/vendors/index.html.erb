<p id="notice"><%= notice %></p>

<h1>Mah Vendors. Let me show you them.</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Products</th>
      <th>Transactions</th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.products.map(&:name).join(', ') %></td>
        <td><%= vendor.transactions_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
